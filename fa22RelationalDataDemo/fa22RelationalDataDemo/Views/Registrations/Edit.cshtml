@model Registration

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Registration</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RegistrationID" />
            <div class="form-group">
                <label asp-for="RegistrationNumber" class="control-label"></label>
                @Html.DisplayFor(Model => Model.RegistrationNumber, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="User.FullName" class="control-label"></label>
                @Html.DisplayFor(Model => Model.User.FullName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="User.Email" class="control-label"></label>
                @Html.DisplayFor(Model => Model.User.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="RegistrationDate" class="control-label"></label>
                @Html.DisplayFor(Model => Model.RegistrationDate, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="RegistrationNotes" class="control-label"></label>
                <input asp-for="RegistrationNotes" class="form-control" />
                <span asp-validation-for="RegistrationNotes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<h5>Courses on this Registration</h5>
<table class="table table-primary">
    <tr>
        <th>Course Title</th>
        <th>Fee</th>
        <th># of Students</th>
        <th>Extended Price</th>
    </tr>
    @foreach (RegistrationDetail rd in Model.RegistrationDetails)
    {
        <tr>
            <td>@Html.DisplayFor(ModelItem => rd.Course.CourseName)</td>
            <td>@Html.DisplayFor(ModelItem => rd.CourseFee)</td>
            <td>@Html.DisplayFor(ModelItem => rd.NumberOfStudents)</td>
            <td>@Html.DisplayFor(ModelItem => rd.TotalFees)</td>
        </tr>
    }
</table>
<div>
    <a asp-action="Index" class="btn btn-info">Back to List</a>
    <a asp-action="Create" asp-controller="RegistrationDetails" asp-route-registrationID="@Model.RegistrationID" class="btn btn-warning">Add Another Item</a>
    <a asp-action="Index" asp-controller="RegistrationDetails" asp-route-registrationID="@Model.RegistrationID" class="btn btn-danger">Edit Existing Items</a>
</div>

