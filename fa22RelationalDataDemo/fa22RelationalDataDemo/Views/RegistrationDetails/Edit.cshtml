@model RegistrationDetail

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>RegistrationDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RegistrationDetailID" />
            <input type="hidden" asp-for="Course.CourseID" />
            <input type="hidden" asp-for="Course.CourseName" />
            <div class="form-group">
                <label class="control-label">Course Name:</label>
                @Html.DisplayFor(c => Model.Course.CourseName)
            </div>
            <div class="form-group">
                <label asp-for="NumberOfStudents" class="control-label"></label>
                <input asp-for="NumberOfStudents" class="form-control" />
                <span asp-validation-for="NumberOfStudents" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-registrationId="@Model.Registration.RegistrationID">Back to List</a>
</div>

